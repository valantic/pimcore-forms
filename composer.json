{
  "name": "valantic/pimcore-forms",
  "version": "2.0.0",
  "description": "Forms for Pimcore",
  "type": "pimcore-bundle",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "limenius/liform": "dev-master#28828461425acfb9d30ae02f554055be17ca5530",
    "pimcore/pimcore": "^10.0",
    "ramsey/uuid": "^4.0",
    "symfony/form": "^5.0",
    "voku/portable-ascii": "^1.5 || ^2.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "phpstan/phpstan": "^1.5.2",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/extension-installer": "^1.1"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/phpwutz/Liform"
    }
  ],
  "autoload": {
    "psr-4": {
      "Valantic\\PimcoreFormsBundle\\": "src/"
    }
  },
  "extra": {
    "pimcore": {
      "bundles": [
        "Valantic\\PimcoreFormsBundle\\ValanticPimcoreFormsBundle"
      ]
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Linus Metzler",
      "email": "linus.metzler@cec.valantic.com"
    },
    {
      "name": "Patrick Ryser",
      "email": "patrick.ryser@cec.valantic.com"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "@composer bin all install --ansi"
    ],
    "post-update-cmd": [
      "@composer bin all update --ansi"
    ],
    "phpstan": [
      "vendor/bin/phpstan analyse src --memory-limit=1G"
    ],
    "phpcs": [
      "vendor/bin/php-cs-fixer fix --diff"
    ],
    "phpcs-check": [
      "vendor/bin/php-cs-fixer fix --diff --dry-run"
    ]
  },
  "config": {
    "allow-plugins": {
      "ocramius/package-versions": true,
      "bamarni/composer-bin-plugin": true,
      "phpstan/extension-installer": true
    }
  }
}
